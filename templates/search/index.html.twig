{% extends '_inside.html.twig' %}

{% block title %}{% trans %}search_in_catalog{% endtrans %}{% endblock %}

{% block wrapper_class %}catalog{% endblock %}

{% block content_wrapper %}

    <div class="wrapper">
        <div class="main-wrap catalog">
            <div class="main-wrap__header">
                <h1>{% trans %}search_in_catalog{% endtrans %}</h1>
            </div>
        </div>

            {% if products|length > 0 %}
                <ul class="product-list">
                    {% for e in products %}
                        {% include 'catalog/_product_in_category.html.twig' with {'e':e} %}
                    {% endfor %}
                </ul>
            {% else %}
                <div class="product_list--empty">{% trans %}search_in_catalog_notfound{% endtrans %}</div>
            {% endif %}

    </div>
{% endblock %}

{% extends 'AppBundle::_inside.html.twig' %}

{% block title %}Статьи{% endblock %}

{% block content %}
    <div class="content-wrap column">
        <div class="main-wrap">
            <div class="main-wrap__header">
                <h1>Статьи</h1>
            </div>
        </div>
        <div class="box-articles mt10">
            {% if entities|length > 0 %}
                {% for e in entities %}
                    <article class="article">
                        <div class="box-top">
                            <div class="box-top__avatar">{% if e.user %}<a href="{{ path('user_view',{nickname:e.user.nickname}) }}"><img src="{{ asset('bundles/app/img/article-avatar.png') }}" alt=""></a>{% endif %}</div>
                            <div class="box-top__cont">
                                {% if e.user %}<span class="author">от:<a href="{{ path('user_view',{nickname:e.user.nickname}) }}">{{ e.user.name }}</a><span class="ic icon-author-rating icon-author-rating__{{ e.user.lvl }}"></span></span>{% endif %}
                                <h3 class="article__title"><a href="{{ path('articles_item',{id:e.id}) }}">{{ e.name }}</a></h3>
                                <div>
                                    <span class="date">{{ e.date|date('d.m.Y') }}</span>
                                    <span class="product-panel__item">
                                        <span class="product-panel__icon"><i class="ic ic_eye"></i><span>{{ e.views }}</span></span>
                                        <span class="product-panel__icon"><i class="fa fa-comment"></i><span>{{ e.comments }}</span></span>
                                        <span class="product-panel__icon"><i class="fa fa-star"></i><span>{{ e.stars }}</span></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="article__body"><img src="{% path e.image, 'big' %}" alt="" />
                            <p>
                                {{ e.preview|nl2br}}
                            </p>
                            <p><a href="{{ path('articles_item',{id:e.id}) }}" class="more">Читать дальше...</a></p>
                        </div>
                    </article>
                {% endfor %}
            {% else %}
                <p>Материалы не найдены</p>
            {% endif %}
        </div>
    </div>
    <aside class="column">
        <div class="banner">{{ bannerRight() }}</div>
    </aside>
{% endblock %}
